<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="582.0" prefWidth="737.0" style="-fx-background-color: linear-gradient(to bottom, #000000, #000000);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.finalproject.ServerController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="0.0" layoutY="0.0" prefHeight="582.0" prefWidth="737.0" spacing="15">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="20.0" />
         </padding>
         <children>
            <Label text="Welcome to Server side" textFill="#f6fffa">
               <font>
                  <Font name="Monotype Corsiva" size="32.0" />
               </font>
               <effect>
                  <DropShadow>
                     <color>
                        <Color red="1.0" green="0.4" blue="0.4" opacity="0.5" />
                     </color>
                  </DropShadow>
               </effect>
            </Label>
            <ScrollPane fx:id="scrollPane" prefHeight="394.0" prefWidth="677.0" style="-fx-border-radius: 10; -fx-background-radius: 10;">
               <content>
                  <VBox fx:id="ServerTextArea" prefHeight="378.0" prefWidth="678.0" />
               </content>
            </ScrollPane>

            <HBox alignment="CENTER" prefHeight="60.0" spacing="15">
               <TextField fx:id="serverInputMsg" prefHeight="46.0" prefWidth="400.0" promptText="Type your message here..." style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #3d4663;                                -fx-border-width: 1px; -fx-padding: 0 15px; -fx-background-color: #222b45;                                -fx-text-fill: #e0e0e0; -fx-prompt-text-fill: #888899;">
                  <font>
                     <Font size="14.0" />
                  </font>
                  <effect>
                     <DropShadow>
                        <color>
                           <Color opacity="0.3" />
                        </color>
                     </DropShadow>
                  </effect>
               </TextField>

               <Button fx:id="sendMsg" mnemonicParsing="false" onAction="#btnSend" prefHeight="46.0" prefWidth="90.0" style="-fx-background-color: #eb0d0d; -fx-text-fill: #ffffff;                             -fx-border-radius: 20; -fx-cursor: hand;" text="Send">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
                  <effect>
                     <DropShadow>
                        <color>
                           <Color red="0.8" green="0.2" blue="0.2" opacity="0.5" />
                        </color>
                     </DropShadow>
                  </effect>
               </Button>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
